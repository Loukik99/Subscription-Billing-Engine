{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.ts",
    "test-*.ts",
    "check-*.ts",
    "inspect-*.ts",
    "cleanup-*.ts",
    "verify-*.ts"
  ]
}
